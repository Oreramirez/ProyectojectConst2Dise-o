<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".Vista.HorarioDetalleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="#83b31e"
            android:radius="50dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:includeFontPadding="false"
                android:text="Dias de Atencion"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textAlignment="center"
                android:textSize="24sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="DIAS RECORRIDO"
                android:textAlignment="center"
                android:textColor="@color/colornegrocar"
                android:textSize="20sp"/>

            <CheckBox
                android:id="@+id/chkLunes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lunes"
                android:textStyle="bold"
                android:elevation="20dp"/>
            <CheckBox
                android:id="@+id/chkMartes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Martes"
                android:textStyle="bold"
                android:elevation="20dp"/>
            <CheckBox
                android:id="@+id/chkMiercoles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Miercoles"
                android:textStyle="bold"
                android:elevation="20dp"/>
            <CheckBox
                android:id="@+id/chkJueves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jueves"
                android:textStyle="bold"
                android:elevation="20dp"/>
            <CheckBox
                android:id="@+id/chkViernes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Viernes"
                android:textStyle="bold"
                android:elevation="20dp"/>
            <CheckBox
                android:id="@+id/chkSabado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sabado"
                android:textStyle="bold"
                android:elevation="20dp"/>
            <CheckBox
                android:id="@+id/chkDomingo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Domingo"
                android:textStyle="bold"
                android:elevation="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="0dp"
            android:padding="20dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_background"
                app:cardElevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:radius="20dp">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_centerInParent="true"
                        android:includeFontPadding="false"
                        android:text="HORARIO DE RECORRIDO"
                        android:textAlignment="center"
                        android:textColor="@color/colornegrocar"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtHorarioConcat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/textView8"
                        android:layout_centerHorizontal="true"
                        android:includeFontPadding="false"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="30dp" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>